<%- include("partials/header"); -%>
<h1>Compose</h1>
<form class="form" action="/compose" method="post">
    <div class="form-group">
        <label for="newItem">Title</label>
        <input class="form-control" id="newItem" type="text" name="newItem" value="">
        <label for="newItemDescription">Post</label>
        <textarea class="form-control" id="newItemDescription" name="newItemDescription" rows="5" cols="30"></textarea>
    </div>
    <button class="btn btn-primary" type="submit" name="publish">Publish</button>
</form>
<%- include("partials/footer"); -%>
